{
  "manifest_version": 3,
  "name": "Anghami PiP Mini Player",
  "version": "1.0.0",
  "description": "True Picture-in-Picture mini-player for Anghami web using Document PiP API - works outside browser like YouTube PiP",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://play.anghami.com/*",
    "https://*.anghami.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://play.anghami.com/*",
        "https://*.anghami.com/*"
      ],
      "js": [
        "content.js",
        "document-pip.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Anghami PiP Mini Player",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "document-pip.js",
        "icons/backward.png",
        "icons/forward.png",
        "icons/play.png",
        "icons/pause.png",
        "icons/music.png",
        "icons/repeat.png",
        "icons/shuffle.png",
        "icons/open-anghami.png",
        "icons/lyrics.png"
      ],
      "matches": [
        "https://play.anghami.com/*",
        "https://*.anghami.com/*"
      ]
    }
  ]
}